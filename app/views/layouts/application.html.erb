<!DOCTYPE html>
<html>
<head>
  <title>The Pink Crusade 2015</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="keywords" content="Roll out the ribbons">
  <meta name="description" content="Roll Out The Ribbons - MMC">
  <meta property='og:locale' content='en_us' />

  <meta property='og:title' content="The Pink Crusade 2015" />

  <meta property='og:type' content='article' />

  <meta property='og:image' content='https://s3.amazonaws.com/myfangate.com/pinkcrusade2015/shareimage.png' />

  <meta name="viewport" content="width=810, maximum-scale=1" />

  <script type="text/javascript">window.tab_properties  = $.extend(window.tab_properties, {"tab_meta":{"title":"Dedicate a Ribbon","picture":"https:\/\/s3.amazonaws.com\/myfangate.com\/pinkcrusade2015\/shareimage.png","description":"To raise breast cancer awareness, The Pink Crusade is giving people an opportunity to dedicate and post ribbons. Dedicate your ribbon today! http:\/\/fngt.it\/Thepinkcrusade15?utm_source=facebook&utm_medium=original&utm_content=post&utm_campaign=TPC"}});
  </script>
  <script type="text/javascript" src="https://s3.amazonaws.com/myfangate.com/assets/js/url-args.js" ></script>
  <script type="text/javascript" src="https://s3.amazonaws.com/myfangate.com/assets/js/jq-custom.js" ></script>
  
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '863400003756179',
        xfbml      : true,
        version    : 'v2.4'
      });
    };

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "//connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));
  </script>

</head>

<body>
  <div id="fb-root"></div>
  <%= yield %>

  <script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
  <!-- Bootstrap Modal Only -->
  <%= javascript_include_tag "bootstrap-modal.js" %>
  <!-- Tooltipster -->
  <%= javascript_include_tag "tooltipster.js" %>
  <!-- Touchable -->
  <%= javascript_include_tag "touchable.js" %>
  <%= javascript_include_tag "hoverable.js" %>
  <!-- pindrop script -->
  <%= javascript_include_tag "pindrop.js" %>
  <script type="text/javascript">window.pin_promo_id  = 2;</script>
  <%= javascript_include_tag "driver.js" %>

  <script>
    function stickyScroll(){
      if  ($('.container').scrollTop() > $('#sticky-search').offset().top) {
        $('.searchbar').css({'position':'fixed','top':'0'});
      }
      else{
        $('.searchbar').css({'position':'absolute','top':'144px'});
      }
    }
    $(function(){
      $('body').scroll(function(){
        stickyScroll();
      });
    });
  </script>
</body>
</html>
